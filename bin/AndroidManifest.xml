<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.innutrac.poly.innutrac"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity android:name="com.innutrac.poly.innutrac.SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.innutrac.poly.innutrac.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.innutrac.poly.innutrac.WelcomeMessageActivity"
            android:label="@string/title_activity_welcome_message" >
        </activity>
        <activity
            android:name="com.innutrac.poly.innutrac.UserInfoActivity"
            android:label="@string/title_activity_user_info" >
        </activity>
        <activity
            android:name="com.innutrac.poly.innutrac.AddFoodActivity"
            android:label="@string/title_activity_add_food" >
        </activity>
        <activity
            android:name="com.innutrac.poly.innutrac.WedgeSummaryActivity"
            android:label="@string/title_activity_wedge_summary" >
        </activity>
    </application>

</manifest>
